<?xml version="1.0" encoding="utf-8"?>
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_height"
        card_view:cardCornerRadius="@dimen/card_view_corner_radius">

        <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:paddingTop="@dimen/review_linear_layout_vertical_margin"
            android:paddingBottom="@dimen/review_linear_layout_vertical_margin"
            android:paddingLeft="@dimen/review_linear_layout_horizontal_margin"
            android:paddingRight="@dimen/review_linear_layout_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/review_author_textView"
            android:layout_width="match_parent"
            android:textSize="@dimen/author_text_view_text_size"
            android:textStyle="bold"
            android:layout_height="@dimen/author_text_view_height"
            android:text="@string/review_author_title"  />

        <TextView
            android:id="@+id/review_content_textView"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/review_content_title"  />
        </LinearLayout>
    </android.support.v7.widget.CardView>

